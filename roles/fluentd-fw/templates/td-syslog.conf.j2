<source>
  @type syslog
  port 5140
  bind 0.0.0.0
  tag syslog
</source>

# Log Forwarding
<match **>
  @type forward
  send_timeout 60s
  recover_wait 10s
  heartbeat_interval 1s
  phi_threshold 16
  hard_timeout 60s
   #primary host
    <server>
      host {{ hostvars['fluentdfw']['ansible_default_ipv4']['address'] }}
      port 24224
    </server>
    # insert scondary host here
    #<server>
      #host  ##secondary hostname##
      #port 24224
      #standby
    #</server>
    #</store>
</match>
